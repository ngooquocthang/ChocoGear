
@{
    ViewBag.Title = "LoginAndRegister";
    Layout = "~/Views/Shared/LoginAndRegister.cshtml"; 
}

<style>
    body {
        background: #EBABAB;
        padding: 0;
    }

    .login {
        height: 621px;
        border-top-right-radius: 0;
        border-bottom-right-radius: 0;
        border-top-left-radius: 21px;
        border-bottom-left-radius: 21px;
        background: white;
        width: 400px;
    }
    .loginform h3 {
        font-family: 'Source Sans Pro', sans-serif;
    }
    .loginform .usrname, .password {
        border-bottom: 2px solid #F9CDCD;
        border-top: none;
        border-right: none;
        border-left: none;
        background: none;
        width: 250px;
        margin-left: 70px;
        margin-top: 50px;
        font-family: 'Source Sans Pro', sans-serif;
        outline:none;
        font-size: 17px;
    }
    .loginform p {
        font-family: 'Source Sans Pro', sans-serif;
        text-align: center;
        font-weight: 500;
        color: #707070;
    }
    .loginform a {
        text-decoration: none;
        text-decoration-style: none;
        color: #707070;
    }
    .btn-login {
        width: 200px;
        height: 50px;
        border-radius: 25px;
        border: none;
        margin-left: 100px;
        margin-top: 60px;
        margin-bottom:35px;
        background: #F9CDCD;
        font-weight: 600;
        color: #707070;
        box-shadow: 0px 0px 10px rgba(0,0,0,0.3);
        cursor:pointer;
        transition:0.5s;

    }
    .btn-login:hover{
        background: #EBABAB;
    }
    h3 {
        margin-left: 70px;
    }
    .loginform .logo {
        margin-top: 60px;
        margin-bottom: 30px;
        border-radius: 50%;
        margin-left: 140px;
        border: 3px solid #F9CDCD;
        box-shadow: 0px 0px 10px rgba(0,0,0,0.3);
    }

    .registerform .logo {
        margin-top: 20px;
        margin-bottom: 10px;
        border-radius: 50%;
        margin-left: 140px;
        border: 3px solid #F9CDCD;
        box-shadow: 0px 0px 10px rgba(0,0,0,0.3);
    }

    .register {
        height: 621px;
        border-top-right-radius: 21px;
        border-bottom-right-radius: 21px;
        border-top-left-radius: 0;
        border-bottom-left-radius: 0;
        background: white;
        width: 400px;
    }
    .registerform .name, .usrname, .password, .phone, .email, .address {
        border-bottom: 2px solid #F9CDCD;
        border-top: none;
        border-right: none;
        border-left: none;
        background: none;
        width: 250px;
        margin-left: 70px;
        margin-top: 20px;
        font-family: 'Source Sans Pro', sans-serif;
        outline: none;
        font-size: 17px;
    }
    .btn-regis {
        width: 200px;
        height: 50px;
        border-radius: 25px;
        border: none;
        margin-left: 100px;
        margin-top: 20px;
        margin-bottom: 15px;
        background: #F9CDCD;
        font-weight: 600;
        color: #707070;
        box-shadow: 0px 0px 10px rgba(0,0,0,0.3);
        cursor: pointer;
        transition: 0.5s;
    }
    .btn-regis:hover{
        background: #EBABAB;
    }

    .register p {
        font-family: 'Source Sans Pro', sans-serif;
        text-align: center;
        font-weight: 500;
        color: #707070;
    }
    .register a {
        text-decoration: none;
        text-decoration-style: none;
        color: #707070;
    }

    @*navigation*@
    .slider {
        width: 800px;
        height: 621px;
        border-top-right-radius: 21px;
        border-bottom-right-radius: 21px;
        border-top-left-radius: 0;
        border-bottom-left-radius: 0;
        overflow: hidden;
        transition:0.5s;
    }
    .slides {
        width: 500%;
        height: 621px;
        display: flex;
    }
    .slides input {
        display:none;
    }
    .slide {
        width:20%;
        transition:2s;
    }
    .slide img {
        width:800px;
        height:621px;
    }
    .navigation-manual {
        position: absolute;
        width: 800px;
        margin-top: 567px;
        display: flex;
        justify-content: center;
        left: -47px;
    }
    .manual-btn {
        border:2px solid #EBABAB;
        width:10px;
        height:10px;
        padding:5px;
        border-radius:21px;
        cursor:pointer;
        transition:1s;
    }
    .manual-btn:not(:last-child){
        margin-right:40px;
    }
    .manual-btn:hover{
        background:#EBABAB;
    }
    #radio1:checked ~ .first {
        margin-left: 0;
    }
    #radio2:checked ~ .first {
        margin-left: -20%;
    }
    #radio3:checked ~ .first {
        margin-left: -40%;
    }
    #radio4:checked ~ .first {
        margin-left: -60%;
    }





</style>
